{% extends 'base.html.twig' %}

{% block title %}Hello BackupsController!{% endblock %}

{% block body %}
    <div class="card" data-controller="general">
        <div class="card-header border-transparent">
            <h3 class="card-title">Logs de Sauvegarde</h3>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-bordered m-0">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>BDD</th>
                        <th>Nom du Fichier</th>
                        <th>Chemin du Fichier</th>
                        <th>Date</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for log in backlogs %}
                        <tr>
                            <td>{{ log.id }}</td>
                            <td>{{ log.databaseName }}</td>
                            <td>{{ log.fileName }}</td>
                            <td>{{ log.filePath }}</td>
                            <td>{{ log.createdAt|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun log de sauvegarde trouv√©.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
