<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Safebase{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="sidebar-mini layout-fixed" style="height: auto" data-controller="general">
<div class="wrapper">
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
            <li class="nav-item">
                <button class="nav-link btn btn-link" data-action="general#collapse"><i class="fas fa-bars"></i>
                </button>
            </li>
        </ul>
    </nav>
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="{{ path('app_default') }}" class="brand-link">
            <span class="brand-text font-weight-light">Safebase</span>
        </a>
        <div class="sidebar">
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Axel Vair</a>
                </div>
            </div>
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column">
                    <li class="nav-item">
                        <a href="{{ path('app_backups') }}" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                Backups
                            </p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="{{ path('app_default') }}" class="nav-link">
                            <i class="nav-icon fas fa-database"></i>
                            <p>
                                Base de données
                            </p>
                        </a>
                    </li>

                    <li id="cron" class="nav-item">
                        <a href="#" class="nav-link" data-action="general#openCron">
                            <i class="nav-icon fas fa-clock"></i>
                            <p>
                                Cron
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li>
                                <a href="{{ path('app_cron') }}" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Ajouter un Cron</p>
                                </a>

                            </li>


                            <li>
                                <a href="{{ path('app_cron_manage') }}" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>Gérer les Crons</p>
                                </a>

                            </li>
                        </ul>

                    </li>

                </ul>
            </nav>
        </div>
    </aside>
    <div class="content-wrapper" style="min-height: 800px">
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">{{ block('title') }}</h1>
                    </div>
                    <div class="col-sm-6">
                        {% block breadcrumb %}
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="{{ path('app_default') }}">Accueil</a></li>
                                <li class="breadcrumb-item active">{{ block('title') }}</li>
                            </ol>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="container-fluid">
                {% block body %}
                {% endblock %}
            </div>
        </section>
    </div>
</div>
</body>
</html>
